
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/shared/_CUILayout.cshtml";
}


@section Styles{ 
    <link href="~/css/Product/List.css" rel="stylesheet" />
}

<from id="productList" class="product-list  wide-wrap">
    <div class="product-list__side">
        <section class="product-list-section">
            <div class="product-list-section__header">گروه کالا</div>
            <div class="product-list-section__content">
                <ul class="product-list-group">
                    <li class="product-list-group__item">
                        <a href="#" class="product-list-group_link">کالای دیجیتال</a>
                        <ul class="product-list-group">
                            <li class="product-list-group__item"><a class="product-list-group__link">گوشی موبایل</a></li>
                            <li class="product-list-group__item"><a class="product-list-group__link">لوازم جانبی</a></li>
                            <li class="product-list-group__item"><a class="product-list-group__link">ذخیزه سازی</a></li>
                        </ul>
                    </li>
                   
                </ul>
            </div>

        </section>
        <section class="product-list-section">
            <div class="product-list-section__header">قیمت</div>
            <div class="product-list-section__content">
                <div class="product-list-price">از : <input class="product-list-price__input" name="fromPrice"/></div>
                <div class="product-list-price">تا : <input class="product-list-price__input" name="toPrice"/></div>

            </div>
        </section>
        <section class="product-list-section">
            <div class="product-list-section__header">برند</div>
            <div class="product-list-section__content">
                <div class="product-list-brands">
                    <label class="product-list-brands__button">اپل <input name="brand" class="product-list-brands__checkbox" type="checkbox" value="1" /><span class="product-list-brands__bullet mdi mdi-check-circle mdi-18px"></span></label>
                    <label class="product-list-brands__button">سامسونگ <input name="brand" class="product-list-brands__checkbox" type="checkbox" value="1" /><span class="product-list-brands__bullet mdi mdi-check-circle mdi-18px"></span> </label>

                </div>

            </div>

        </section>
        <section class="product-list-section">
            <div class="product-list-section__header">مشخصات فنی</div>
            <div class="product-list-section__content">
                <ul class="product-list-specs">
                    <li class="product-list-specs__item">
                        <input type="checkbox" class="product-list-specs__toggle-input" id="chk_spec_1" />
                        <div class="product-list-specs__header">حافظه داخلی <label for="chk_spec_1" class="product-list-specs__toggle mdi mdi-plus mdi-18px"></label><label for="chk_spec_1" class="product-list-specs__toggle mdi mdi-minus mdi-18px"></label>
                        </div>
                        <div class="product-list-specs__values">    
                            <label class="product-list-specs__button">2 گیگابایت <input name="specs" class="product-list-specs__checkbox" type="checkbox" value="1" /><span class="product-list-specs__bullet mdi mdi-check-circle mdi-18px"></span> </label>
                            <label class="product-list-specs__button">4 گیگابایت <input name="specs" class="product-list-specs__checkbox" type="checkbox" value="1" /><span class="product-list-specs__bullet mdi mdi-check-circle mdi-18px"></span> </label>
                        </div>

                    </li>
                    <li class="product-list-specs__item">
                        <input type="checkbox" class="product-list-specs__toggle-input" id="chk_spec_2" />
                        <div class="product-list-specs__header">
                            سبستم عامل <label for="chk_spec_2" class="product-list-specs__toggle mdi mdi-plus mdi-18px"></label><label for="chk_spec_2" class="product-list-specs__toggle mdi mdi-minus mdi-18px"></label>
                        </div>
                        <div class="product-list-specs__values">
                            <label class="product-list-specs__button">اندروید 9<input name="specs" class="product-list-specs__checkbox" type="checkbox" value="1" /><span class="product-list-specs__bullet mdi mdi-check-circle mdi-18px"></span> </label>

                            <label class="product-list-specs__button">اندروید 8<input name="specs" class="product-list-specs__checkbox" type="checkbox" value="1" /><span class="product-list-specs__bullet mdi mdi-check-circle mdi-18px"></span> </label>

                        </div>

                    </li>

                </ul>
            </div>

        </section>
       <div class="product-list__actions">
           <label class="button pink">
               <input type="submit" class="product-list-actions_input" />
               <span class="button-text">عمال فیلتر</span>
           </label>
       </div>
    </div>

    <div class="product-list__content">
        @* header menu  *@
        <div class="product-list__header">
            <h1 class="product-list__title">گوشی موبایل</h1>
            <span class="product-list-keyword">
                <input class="product-list-keyword__input" name="keyword" placeholder="جستجو..." />
                <span class="product-list-keyword__icon mdi mdi-magnify mdi-18px"></span>
            </span>
        </div>
        <div class="product-list-actions">
            <div class="product-list-action__info">
                <select class="product-list-action__select">
                    <option value="20">20</option>
                    <option value="20">40</option>
                    <option value="20">60</option>
                </select>
                <span class="product-list-actions__total">230 کالا</span>
            </div>
            <div class="product-list-pager">
                <a class="product-list-pager__button">1</a>
                <span class="product-list-pager__seprator">....</span>
                <a class="product-list-pager__button">7</a>
                <a class="product-list-pager__button product-list-pager__button--current">8</a>
                <a class="product-list-pager__button">9</a>

            </div>
        </div>
        <ul class="products">
