        <div class="product-list-actions">
            <div class="product-list-action__info">
                <select class="product-list-action__select">
                    <option value="20">20</option>
                    <option value="20">40</option>
                    <option value="20">60</option>
                </select>
                <span class="product-list-actions__total">230 کالا</span>
            </div>
            <div class="product-list-pager">
                <a class="product-list-pager__button">1</a>
