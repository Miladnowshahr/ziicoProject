@using ECommerce.Models.Models.Tags
@model TagValue


@{
    var id = ViewBag.Id;
    var tagId = ViewBag.TagId;
    string title = (id != null ? "ویرایش" : "افزودن") + "مقدار برچسب";
    ViewData["Title"] = title;

}
@section Breadcrumb
{
    <nav aria-label="breadcrumb" class="mt-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">صفحه اصلی</a></li>
            <li class="breadcrumb-item"><a href="#">لیست مقادیر برچسب </a></li>
            <li class="breadcrumb-item">@ViewData["Title"]</li>
        </ol>
    </nav>
}
<div class="card text-right">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h1 class="h5">@Model?.Title</h1>
        <div class="action">
            <a asp-area="Admin" asp-controller="Tag" asp-action="List" asp-route-productId="" class="btn btn-outline-primary btn-sm">لیست @ViewBag.Tag.Title</a>
        </div>
    </div>
    <div class="card-body">
        <form class="was-validated" asp-area="Admin" asp-controller="Tag" asp-action="SaveValue" method="post" name="frmProduct">
            @{
                if (id != null)
                {
                    <input type="hidden" name="id" value="@id" />
                }
                <input type="hidden" name="id" value="@tagId" />
            }
            <div class="form-group row">
                <label for="txtTile" class="col-md-2">عنوان</label>
                <div class="col-md-5">
                    <input class="form-control" id="txtTitle" name="title" required maxlength="150" value="@(Model?.Title)">
                    <div class="valid-feedback">درج عنوان الزامی است.</div>
                </div>
            </div>


            <div class="form-group row">
                <label for="ddStatus" class="col-md-2">وضعیت</label>
                <div class="col-md-5">
                    <select class="custom-select" id="ddStatus" name="state" required value="@(Model?.State)">
                        <option value="">انتخاب کنید</option>
                        <option selected="@(Model?.State.ToString()=="Enable")" value="1">فعال</option>
                        <option selected="@(Model?.State.ToString()=="Disable")" value="2">غیرفعال</option>
                    </select>
                    <div class="invalid-feedback">وضعیت را انتخاب کنید</div>

                </div>
            </div>

            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-5">
                    <button type="submit" class="btn btn-primary">ذخیره</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{

}