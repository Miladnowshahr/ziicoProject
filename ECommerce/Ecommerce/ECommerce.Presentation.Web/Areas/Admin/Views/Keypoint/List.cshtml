
@using ECommerce.Models.Model.KeyPoints
@{
    var type = (KeyPointType)ViewBag.Type;
    var title = "لیست نقاط" + (type == KeyPointType.Positive ? "مثبت" : "منفی");
    ViewData["Title"] = title;
}

@section Breadcrumb
{
    <nav aria-label="breadcrumb" class="mt-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">صفحه اصلی</a></li>

            <li class="breadcrumb-item">لیست کالا</li>
        </ol>
    </nav>
}

<div class="card text-right">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h1 class="h5">لیست @title</h1>
        <div class="action">
           
            <a type="button" class="btn btn-outline-success btn-sm" asp-area="Admin" asp-controller="KeyPoint" asp-action="Add">افزودن</a>
        </div>
    </div>
    <div class="card-body">
       
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col" class="w-25">مشخصات</th>
                    <th scope="col" style="width: 8%">وضعیت</th>
                    <th scope="col">ایجاد کننده</th>
                    <th scope="col">آخرین تغییرات</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">1</th>
                    <td>
                        <strong>نقطه مثبت 1</strong><br />
                        <span class="text-muted">شناسه :1 </span>
                    </td>
                    <td class="align-middle">فعال</td>
                    <td class="align-middle">
                        <span>میلاد نعمت پور</span><br />
                        <span class="text-muted">تاریخ :1399/01/07 , 16:05</span>
                    </td>

                    <td class="align-middle">
                        <span>میلاد نعمت پور</span><br />
                        <span class="text-muted">تاریخ :1399/01/07 , 16:05</span>
                    </td>

                    <td class="align-middle">
                        <div class="dropdown">
                            <button class="btn dropdown-toggle" type="button" id="ddAction" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
                            <div class="dropdown-menu  dropdown-menu-right text-right" aria-labelledby="ddAction">
                                <a class="dropdown-item" asp-area="admin" asp-controller="keypoint" asp-action="Add" asp-route-id="" >ویرایش</a>
                                <a class="dropdown-item text-danger" href="#">حذف</a>
                            </div>
                        </div>
                    </td>
                </tr>
            
            </tbody>

        </table>
      
    </div>
</div>