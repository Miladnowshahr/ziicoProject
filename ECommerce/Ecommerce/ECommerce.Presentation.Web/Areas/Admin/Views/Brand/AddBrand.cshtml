@model BrandViewModel
@{
    var Id = (int?)ViewBag.Id;
    ViewData["Title"] = (Id != null ? "ویرایش" : "افزودن") + " برند";
    var mod = Model;
}
@section Breadcrumb
{
    <nav aria-label="breadcrumb" class="mt-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">صفحه اصلی</a></li>
            <li class="breadcrumb-item">@ViewData["Title"] +@Model?.Title</li>
        </ol>
    </nav>
}
<div class="card text-right">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h1 class="h5">@ViewData["Title"]</h1>
        <div class="action">
            <a asp-area="Admin" asp-controller="Brand" asp-action="List" class="btn btn-outline-primary btn-sm">لیست کالاها</a>
        </div>
    </div>
    <div class="card-body">
        <form class="was-validated"  asp-area="Admin" asp-controller="Brand" asp-action="Save" method="post" name="frmProduct" enctype="multipart/form-data">
            @{
                if (Id != null)
                {
                    <input type="hidden" name="id" value="@Id" />
                }
            }
            <div class="form-group row">
                <label for="txtTile" class="col-md-2">عنوان</label>
                <div class="col-md-5">
                    <input class="form-control" id="txtTitle" name="title" required maxlength="50" value="@(Model?.Title)">
                    <div class="valid-feedback">درج عنوان الزامی است.</div>
                </div>
            </div>
            <div class="form-group row">
                <label for="txtSlug" class="col-md-2">نام URL</label>
                <div class="col-md-5">
                    <input class="form-control" id="txtSlug" required name="slug" value="@(Model?.Slug)"/>
                    <div class="valid-feedback">درج نام URL الزامی است.</div>
                </div>
            </div>

            <div class="form-group row">
                <label for="ddStatus" class="col-md-2">وضعیت</label>
                <div class="col-md-5">
                    <select class="custom-select" id="ddStatus" name="state" required value="@(Model?.State)">
                        <option value="">انتخاب کنید</option>
                        <option selected="@(Model?.State=="Enable")" value="1">فعال</option>
                        <option selected="@(Model?.State=="Disable")" value="2">غیرفعال</option>
                    </select>
                    <div class="invalid-feedback">وضعیت را انتخاب کنید</div>

                </div>
            </div>

            <div class="form-group row">
                <label for="flePhoto" class="col-md-2"> تصویر برند</label>
                <div class="col-md-5">
                    <input type="file" class="form-control-file" id="flePhoto"  name="photo" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-5">
                    <button type="submit" class="btn btn-primary">ذخیره</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{

}