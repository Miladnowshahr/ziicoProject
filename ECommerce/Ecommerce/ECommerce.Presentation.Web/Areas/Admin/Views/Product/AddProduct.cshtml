@model ECommerce.Models.ViewModels.ProductVM.BrandGroupViewModel

@{
    var Id = (int?)ViewBag.Id;
    ViewData["Title"] = "AddProduct";
}

@section Breadcrumb
{
    <nav aria-label="breadcrumb" class="mt-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">صفحه اصلی</a></li>
            <li class="breadcrumb-item">@(Id != null ? "ویرایش":"افزودن") کالا</li>
        </ol>
    </nav>
}
<div class="card text-right">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h1 class="h5">@(Id != null ? "ویرایش":"افزودن") کالا</h1>
        <div class="action">
            <a asp-area="Admin" asp-controller="Product" asp-action="List" class="btn btn-info-outline btn-sm">لیست کالاها</a>
        </div>
    </div>
    <div class="card-body">
        <form class="was-validated"  asp-area="Admin" asp-controller="Product" asp-action="Save" method="post" name="frmProduct">
            @{
                if (Id != null)
                {
                    <input type="hidden" name="id" value="@Id" />
                }
            }
            <div class="form-group row">
                <label for="txtPrimName" class="col-md-2">نام اصلی</label>
                <div class="col-md-5">
                    <input class="form-control" id="txtPrimName" name="primTitle" required maxlength="50">
                    <div class="valid-feedback">درج نام اصلی الزامی است.</div>
                </div>
            </div>
            <div class="form-group row">
                <label for="txtSecName" class="col-md-2">نام محصول به زبان انکلیسی</label>
                <div class="col-md-5">
                    <input class="form-control" id="txtSec" required name="secTitle" />
                    <div class="valid-feedback">درج نام انگلیسی الزامی است.</div>
                </div>

            </div>

            <div class="form-group row">
                <label for="txtDesc" class="col-md-2">توضیحات</label>
                <div class="col-md-5">
                    <textarea id="txtDesc" class="form-control" required cols="100" name="description" rows="5" name="tx"></textarea>
                    <div class="valid-feedback">درج توضیحات الزامی است.</div>
                </div>
            </div>

            <div class="form-group row">
                <label for="ddBrand" class="col-md-2">برند</label>
                <div class="col-md-5">
                    <select class="custom-select" asp-items="Model.Brand"   id="ddBrand" name="Brand" required>
                        <option value="">انتخاب کنید</option>
       
                    </select>
                    <div class="invalid-feedback">برند را انتخاب کنید</div>

                </div>
            </div>
            <div class="form-group row">
                <label for="ddGroup" class="col-md-2">گروه</label>
                <div class="col-md-5">
                    <select class="custom-select" asp-items="Model.Group" id="ddGroup" name="Group" required>
                        <option value="">انتخاب کنید</option>
                    
                    </select>
                    <div class="invalid-feedback">گروه را انتخاب کنید</div>

                </div>
            </div>
            <div class="form-group row">
                <label for="ddStatus" class="col-md-2">وضعیت</label>
                <div class="col-md-5">
                    <select class="custom-select" id="ddStatus" name="state" required>
                        <option>انتخاب کنید</option>
                        <option value="1">فعال</option>
                        <option value="2">غیرفعال</option>
                    </select>
                    <div class="invalid-feedback">وضعیت را انتخاب کنید</div>

                </div>
            </div>
            .
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-5">
                    <button type="submit" class="btn btn-primary">ذخیره</button>

                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
   
}