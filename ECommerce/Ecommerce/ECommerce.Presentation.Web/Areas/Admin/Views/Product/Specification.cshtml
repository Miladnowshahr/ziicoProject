
@{
    ViewData["Title"] = "مدیریت مشخصات فنی";
}


@section Breadcrumb
{
    <nav aria-label="breadcrumb" class="mt-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="">صفحه اصلی</a></li>
            <li class="breadcrumb-item"><a href="">لیست کالاها</a></li>
            <li class="breadcrumb-item">مدیریت مشخصات فنی</li>
        </ol>
    </nav>
}

<div class="card text-right">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h1 class="h5">مدیریت مشخصات فنی گوشی سامسونگ اس 9</h1>
    </div>
    <div class="card-body">
        <form class="was-validated" asp-area="Admin" asp-controller="Specification" asp-action="Save" method="post" name="frmProduct">

            <input type="hidden" name="id" @*value="@Id"*@ />
            <div class="card mb-4">
                <div class="card-header">
                    <h2 class="h6">صفحه نمایش</h2>
                </div>
                <div class="card-body">
                    <div class="form-group row">
                        <label for="txtTile" class="col-md-2">ابعاد</label>
                        <div class="col-md-5">
                            <input type="hidden" name="ids" value="1" />
                            <input class="form-control" id="txtValue_1" name="value" required maxlength="150" @*value="@(Model?.Title)"*@>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="txtTile" class="col-md-2">رنگ</label>
                        <div class="col-md-5">
                            <input type="hidden" name="ids" value="2" />
                            <input class="form-control" id="txtValue_2" name="value" required maxlength="150" @*value="@(Model?.Title)"*@>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <h2 class="h6">نرم افزار</h2>
                </div>
                <div class="card-body">
                    <div class="form-group row">
                        <label for="txtTile" class="col-md-2">سیستم عامل</label>
                        <div class="col-md-5"> 
                            <input type="hidden" name="ids" value="3" />
                            <input class="form-control" id="txtValue_3" name="value" required maxlength="150" @*value="@(Model?.Title)"*@>
                        </div>
                    </div>

                </div>
            </div>



            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-5">
                    <button type="submit" class="btn btn-primary">ذخیره</button>
                </div>
            </div>
        </form>
    </div>
</div>

